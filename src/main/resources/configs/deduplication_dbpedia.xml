<?xml version="1.0" encoding="UTF-8"?>
<config>
    <settings>
        <keyspaceSubjectTable>datalake</keyspaceSubjectTable>
        <subjectTable>subject</subjectTable>
        <keyspaceStagingTable>datalake</keyspaceStagingTable>
        <stagingTable>subject_dbpedia</stagingTable>
        <keyspaceDuplicatesTable>datalake</keyspaceDuplicatesTable>
        <duplicatesTable>duplicates</duplicatesTable>
        <keyspaceVersionTable>datalake</keyspaceVersionTable>
        <versionTable>version</versionTable>
        <filterUndefined>true</filterUndefined>
        <filterSmall>true</filterSmall>
        <maxBlockSize>20000</maxBlockSize>
        <minBlockSize>1</minBlockSize>
        <numPartitions>512</numPartitions>
        <confidence>0.3</confidence>
    </settings>
    <simMeasurements>
        <attribute>
            <key>id_dbpedia</key>
            <feature>
                <similarityMeasure>ExactMatchString</similarityMeasure>
                <scale>1</scale>
            </feature>
        </attribute>
        <attribute>
            <key>id_wikidata</key>
            <feature>
                <similarityMeasure>ExactMatchString</similarityMeasure>
                <scale>1</scale>
            </feature>
        </attribute>
        <attribute>
            <key>name</key>
            <feature>
                <similarityMeasure>JaroWinkler</similarityMeasure>
                <weight>0.7</weight>
                <scale>1</scale>
            </feature>
            <feature>
                <similarityMeasure>MongeElkan</similarityMeasure>
                <weight>0.3</weight>
                <scale>1</scale>
            </feature>
        </attribute>
    </simMeasurements>
</config>
